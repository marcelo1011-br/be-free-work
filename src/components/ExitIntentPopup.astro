    <div class="exit-content">
      <h2 id="exit-popup-title" class="exit-title">{text.title}</h2>
      <p class="exit-subtitle">{text.subtitle}</p>

      <div class="exit-ctas">
        <a href={text.whatsappUrl} target="_blank" rel="noopener noreferrer" class="btn btn-accent btn-lg">
          <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
