          </svg>
          {text.ctaWhatsApp}
        </a>
        <a href={text.emailUrl} class="btn btn-outline-primary btn-lg">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
          {text.ctaEmail}
        </a>
      </div>

      <button class="exit-dismiss">{text.dismiss}</button>
    </div>
  </div>
</div>

<style>
  .exit-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.75);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    padding: var(--space-md);
  }

  .exit-overlay.show {
    opacity: 1;
    visibility: visible;
  }

  .exit-popup {
    position: relative;
    background: var(--color-bg-card);
    border: 1px solid var(--glass-border);
    border-radius: 6px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
    max-width: 540px;
    width: 100%;
    padding: var(--space-2xl);
    transform: scale(0.9) translateY(20px);
    transition: transform 0.3s ease;
  }

  .exit-overlay.show .exit-popup {
    transform: scale(1) translateY(0);
  }

  .exit-close {
    position: absolute;
    top: var(--space-md);
    right: var(--space-md);
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    color: var(--color-text-light);
    cursor: pointer;
    border-radius: var(--radius-md);
    transition: all 0.2s ease;
  }

  .exit-close:hover {
    background: rgba(255, 255, 255, 0.1);
    color: var(--color-text);
  }

  .exit-content {
    text-align: center;
    padding-top: var(--space-lg);
  }

  .exit-title {
    font-size: var(--font-size-h4);
    font-weight: var(--font-weight-bold);
    color: var(--color-text);
    margin-bottom: var(--space-md);
    line-height: var(--line-height-tight);
  }

  .exit-subtitle {
    font-size: var(--font-size-h6);
    color: var(--color-text-light);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-xl);
  }

  .exit-ctas {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .exit-ctas .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    width: 100%;
  }

  .exit-dismiss {
    background: none;
    border: none;
    color: var(--color-text-light);
    font-size: var(--font-size-small);
    text-decoration: underline;
    cursor: pointer;
    opacity: 0.6;
    transition: opacity 0.2s ease;
    padding: var(--space-xs);
  }

  .exit-dismiss:hover {
    opacity: 1;
  }

  /* Light theme adjustments */
  :global(html.light) .exit-overlay {
    background: rgba(0, 0, 0, 0.6);
  }

  :global(html.light) .exit-popup {
    background: #ffffff;
    border-color: rgba(15, 23, 42, 0.1);
  }

  :global(html.light) .exit-title {
    color: #0f172a;
  }

  :global(html.light) .exit-subtitle {
    color: #475569;
  }

  :global(html.light) .exit-close {
    color: #64748b;
  }

  :global(html.light) .exit-close:hover {
    background: rgba(15, 23, 42, 0.05);
    color: #0f172a;
  }

  :global(html.light) .exit-dismiss {
    color: #64748b;
  }

  /* Mobile adjustments */
  @media (max-width: 640px) {
    .exit-popup {
      padding: var(--space-xl);
    }

    .exit-title {
      font-size: var(--font-size-h5);
    }

    .exit-subtitle {
      font-size: var(--font-size-body);
    }

    .exit-ctas {
      gap: var(--space-sm);
    }
  }
</style>

<script>
  /* ================================
     EXIT INTENT DETECTION
     ================================ */

  // Verifica se já mostrou o popup nesta sessão
  const STORAGE_KEY = 'exitIntentShown';
  const hasShownPopup = sessionStorage.getItem(STORAGE_KEY);

  if (!hasShownPopup) {
    const overlay = document.getElementById('exit-intent-overlay');
    const closeBtn = overlay?.querySelector('.exit-close');
    const dismissBtn = overlay?.querySelector('.exit-dismiss');
    let hasTriggered = false;

    // Função para mostrar o popup
    function showPopup() {
      if (hasTriggered || !overlay) return;
      hasTriggered = true;
      overlay.classList.add('show');
      overlay.setAttribute('aria-hidden', 'false');
      sessionStorage.setItem(STORAGE_KEY, 'true');
      document.body.style.overflow = 'hidden';
    }

    // Função para fechar o popup
    function closePopup() {
      if (!overlay) return;
      overlay.classList.remove('show');
      overlay.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
    }

    // Detecta quando o mouse sai pela parte superior (exit intent)
    document.addEventListener('mouseout', (e) => {
      // Se o mouse sai pela parte superior do viewport
      if (!e.relatedTarget && e.clientY <= 0) {
        showPopup();
      }
    });

    // Eventos de fechar
    closeBtn?.addEventListener('click', closePopup);
    dismissBtn?.addEventListener('click', closePopup);

    // Fechar ao clicar fora do popup
    overlay?.addEventListener('click', (e) => {
      if (e.target === overlay) {
        closePopup();
      }
    });

    // Fechar com ESC
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && overlay?.classList.contains('show')) {
        closePopup();
      }
    });
  }
</script>
