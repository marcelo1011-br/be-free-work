---
/* ================================
   BE FREE TOURS - Hero Component
   Design Premium: Full-screen com imagem de fundo e trust badges
   ================================ */

import { Image } from "astro:assets";

const {
  title,
  subtitle,
  ctaPrimary,
  ctaSecondary,
  lang = "en"
} = Astro.props;

// Import hero background image
import heroImage from "../images/heroes/home-hero.webp";

// Trust badges content by language
const trustBadges = {
  en: [
    { icon: "star", label: "Top-Rated", value: "Private Tour Operator" },
    { icon: "guide", label: "Licensed Guides", value: "Local Experts" },
    { icon: "vehicle", label: "Private Vehicle", value: "Door-to-door" }
  ],
  es: [
    { icon: "star", label: "Mejor Valorado", value: "Operador de Tours Privados" },
    { icon: "guide", label: "Guías Licenciados", value: "Expertos Locales" },
    { icon: "vehicle", label: "Vehículo Privado", value: "Puerta a puerta" }
  ],
  "pt-br": [
    { icon: "star", label: "Melhor Avaliado", value: "Operador de Passeios Privados" },
    { icon: "guide", label: "Guias Licenciados", value: "Especialistas Locais" },
    { icon: "vehicle", label: "Veículo Privado", value: "Porta a porta" }
  ]
};

const badges = trustBadges[lang] || trustBadges.en;

// Tagline by language
const taglines = {
  en: "Tailor-Made, Expert-Led, Stress-Free",
  es: "A Medida, Con Expertos, Sin Estrés",
  "pt-br": "Sob Medida, Com Especialistas, Sem Estresse"
};

const tagline = taglines[lang] || taglines.en;
---

<section class="hero">
  <!-- Background Image -->
  <div class="hero-bg">
    <Image
      src={heroImage}
      alt="Cristo Redentor e Rio de Janeiro ao pôr do sol"
      width={1920}
      height={1080}
      loading="eager"
      fetchpriority="high"
      format="webp"
      quality={85}
    />
    <div class="hero-overlay"></div>
  </div>

  <!-- Content -->
  <div class="hero-container">
    <div class="hero-content">
      <p class="hero-tagline">{tagline}</p>
      <h1 class="hero-title">{title}</h1>
      <p class="hero-subtitle">{subtitle}</p>
      
      <div class="hero-ctas">
        <a href={ctaPrimary.link} class="btn btn-primary btn-lg">
          {ctaPrimary.text}
        </a>
        <a href={ctaSecondary.link} class="btn btn-outline-primary btn-lg">
          {ctaSecondary.text}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </div>

  <!-- Trust Badges Bar -->
  <div class="trust-badges-wrapper">
    <div class="trust-badges glass">
      {badges.map((badge) => (
        <div class="trust-badge">
          <div class="badge-icon">
            {badge.icon === "star" && (
              <Fragment>
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
                <div class="stars">
                  <span>★★★★★</span>
                </div>
              </Fragment>
            )}
            {badge.icon === "guide" && (
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 11l3 3L22 4"/>
                <path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11"/>
              </svg>
            )}
            {badge.icon === "vehicle" && (
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="1" y="3" width="15" height="13" rx="2"/>
                <path d="M16 8h4l3 3v5h-7V8z"/>
                <circle cx="5.5" cy="18.5" r="2.5"/>
                <circle cx="18.5" cy="18.5" r="2.5"/>
              </svg>
            )}
          </div>
          <div class="badge-text">
            <span class="badge-label">{badge.label}</span>
            <span class="badge-value">{badge.value}</span>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100svh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    overflow: hidden;
  }

  /* Background Image */
  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-bg :global(img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: var(--gradient-hero);
  }

  /* Container */
  .hero-container {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 1600px;
    margin-inline: auto;
    padding-inline: var(--container-padding);
    padding-top: 120px;
    padding-bottom: calc(var(--space-3xl) + 120px);
  }

  /* Content - Centered */
  .hero-content {
    max-width: 1550px;
    width: 100%;
    margin: 0 auto;
    text-align: center;
  }

  .hero-tagline {
    font-size: var(--font-size-body);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-light);
    margin-bottom: var(--space-md);
    letter-spacing: 0.02em;
  }

  .hero-title {
    font-size: clamp(2.5rem, 6vw + 1rem, 4rem);
    font-weight: var(--font-weight-bold);
    color: var(--color-text);
    margin-bottom: var(--space-lg);
    line-height: 1.1;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
    max-width: 100%;
    text-wrap: balance;
    letter-spacing: -0.015em;
  }

  .hero-subtitle {
    font-size: var(--font-size-h5);
    color: color-mix(in srgb, var(--color-text-inverse) 95%, transparent);
    margin-bottom: var(--space-xl);
    line-height: var(--line-height-relaxed);
    max-width: 80%;
    margin-left: auto;
    margin-right: auto;
    text-shadow: 0 1px 8px rgba(0, 0, 0, 0.4);
  }

  .hero-ctas {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
    justify-content: center;
  }

  .hero-ctas .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  /* Trust Badges */
  .trust-badges-wrapper {
    position: absolute;
    bottom: var(--space-xl);
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    width: 100%;
    max-width: 900px;
    padding-inline: var(--container-padding);
  }

  .trust-badges {
    display: flex;
    justify-content: space-around;
    align-items: center;
    gap: var(--space-lg);
    padding: var(--space-lg) var(--space-xl);
    border-radius: var(--radius-lg);
  }

  .trust-badge {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  .badge-icon {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
    color: var(--color-accent);
  }

  .badge-icon .stars {
    font-size: var(--font-size-xs);
    color: var(--color-accent);
    letter-spacing: 2px;
  }

  .badge-text {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .badge-label {
    font-size: var(--font-size-body);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
  }

  .badge-value {
    font-size: var(--font-size-small);
    color: var(--color-text-light);
  }

  /* Responsivo */
  @media (max-width: 768px) {
    .hero-container {
      padding-top: 100px;
      padding-bottom: var(--space-xl);
    }

    .hero-content {
      text-align: center;
      max-width: 100%;
    }

    .hero-subtitle {
      max-width: 100%;
    }

    .hero-ctas {
      flex-direction: column;
      align-items: stretch;
    }

    .hero-ctas .btn {
      width: 100%;
      justify-content: center;
    }

    .trust-badges-wrapper {
      position: relative;
      bottom: auto;
      left: auto;
      transform: none;
      margin-top: var(--space-lg);
      padding-inline: var(--space-md);
    }

    .trust-badges {
      flex-direction: column;
      gap: var(--space-sm);
      padding: var(--space-md);
    }

    .trust-badge {
      width: 100%;
      justify-content: center;
      text-align: center;
      padding: var(--space-sm);
      border-bottom: 1px solid var(--color-border-light);
      flex-direction: column;
      gap: var(--space-xs);
    }

    .trust-badge:last-child {
      border-bottom: none;
    }

    .badge-icon {
      justify-content: center;
    }

    .badge-text {
      align-items: center;
    }

    .badge-label {
      font-size: var(--font-size-small);
    }

    .badge-value {
      font-size: var(--font-size-xs);
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: clamp(1.75rem, 7vw, 2.25rem);
    }

    .hero-subtitle {
      font-size: var(--font-size-body);
    }

    .hero-tagline {
      font-size: var(--font-size-small);
    }
  }

  /* Tema claro: Hero mantém texto branco sobre imagem */
  :global(html.light) .hero-tagline,
  :global(html.light) .hero-title,
  :global(html.light) .hero-subtitle {
    color: #ffffff;
  }

  :global(html.light) .hero-tagline {
    color: rgba(255, 255, 255, 0.9);
  }

  :global(html.light) .hero-subtitle {
    color: rgba(255, 255, 255, 0.95);
  }

  /* Trust badges no tema claro - glass escuro */
  :global(html.light) .trust-badges {
    background: rgba(15, 23, 42, 0.85);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.15);
  }

  :global(html.light) .badge-label {
    color: #ffffff;
  }

  :global(html.light) .badge-value {
    color: rgba(255, 255, 255, 0.7);
  }

  :global(html.light) .trust-badge {
    border-bottom-color: rgba(255, 255, 255, 0.1);
  }

  :global(html.light) .btn-outline-secondary {
    border-color: rgba(255, 255, 255, 0.8);
    color: #ffffff;
  }

  :global(html.light) .btn-outline-secondary:hover {
    background-color: rgba(255, 255, 255, 0.15);
    border-color: #ffffff;
  }

  :global(html.light) .btn-outline-primary {
    border-color: rgba(255, 255, 255, 0.8);
    color: #ffffff;
  }

  :global(html.light) .btn-outline-primary:hover {
    background-color: rgba(255, 255, 255, 0.15);
    border-color: #ffffff;
  }
</style>
