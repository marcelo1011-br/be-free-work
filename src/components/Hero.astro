---


import { Image } from "astro:assets";

const {
  title,
  subtitle,
  ctaPrimary,
  ctaSecondary,
  lang = "en"
} = Astro.props;


import heroImage from "../images/heroes/home-hero.webp";


const trustBadges = {
  en: [
    { icon: "star", label: "Top-Rated", value: "Private Tour Operator" },
    { icon: "guide", label: "Licensed Guides", value: "Local Experts" },
    { icon: "vehicle", label: "Private Vehicle", value: "Door-to-door" }
  ],
  es: [
    { icon: "star", label: "Mejor Valorado", value: "Operador de Tours Privados" },
    { icon: "guide", label: "Guías Licenciados", value: "Expertos Locales" },
    { icon: "vehicle", label: "Vehículo Privado", value: "Puerta a puerta" }
  ],
  "pt-br": [
    { icon: "star", label: "Melhor Avaliado", value: "Operador de Passeios Privados" },
    { icon: "guide", label: "Guias Licenciados", value: "Especialistas Locais" },
    { icon: "vehicle", label: "Veículo Privado", value: "Porta a porta" }
  ]
};

const badges = trustBadges[lang] || trustBadges.en;


const taglines = {
  en: "Tailor-Made, Expert-Led, Stress-Free",
  es: "A Medida, Con Expertos, Sin Estrés",
  "pt-br": "Sob Medida, Com Especialistas, Sem Estresse"
};

const tagline = taglines[lang] || taglines.en;
---

<section class="hero">
  
  <div class="hero-bg">
    <Image
      src={heroImage}
      alt="Cristo Redentor e Rio de Janeiro ao pôr do sol"
      width={1920}
      height={1080}
      loading="eager"
      fetchpriority="high"
      format="webp"
      quality={85}
    />
    <div class="hero-overlay"></div>
  </div>

  
  <div class="hero-container">
    <div class="hero-content">
      <p class="hero-tagline">{tagline}</p>
      <h1 class="hero-title">{title}</h1>
      <p class="hero-subtitle">{subtitle}</p>
      
      <div class="hero-ctas">
        <a href={ctaPrimary.link} class="btn btn-primary btn-lg">
          {ctaPrimary.text}
        </a>
        <a href={ctaSecondary.link} class="btn btn-outline-primary btn-lg">
          {ctaSecondary.text}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </div>

  
  <div class="trust-badges-wrapper">
    <div class="trust-badges glass">
      {badges.map((badge) => (
        <div class="trust-badge">
          <div class="badge-icon">
            {badge.icon === "star" && (
              <Fragment>
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
                <div class="stars">
                  <span>★★★★★</span>
                </div>
              </Fragment>
            )}
            {badge.icon === "guide" && (
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 11l3 3L22 4"/>
                <path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11"/>
              </svg>
            )}
            {badge.icon === "vehicle" && (
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="1" y="3" width="15" height="13" rx="2"/>
                <path d="M16 8h4l3 3v5h-7V8z"/>
                <circle cx="5.5" cy="18.5" r="2.5"/>
                <circle cx="18.5" cy="18.5" r="2.5"/>
              </svg>
            )}
          </div>
          <div class="badge-text">
            <span class="badge-label">{badge.label}</span>
            <span class="badge-value">{badge.value}</span>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .hero {
    --hero-min-height: 100svh;
    --hero-container-max: min(1600px, 100%);
    --hero-content-max: min(1550px, 100%);
    --hero-padding-top: clamp(6rem, 10vw, 7.5rem);
    --hero-padding-bottom: calc(var(--space-3xl) + var(--hero-padding-top));
    --hero-padding-top-mobile: clamp(5.5rem, 12vw, 6.25rem);
    --hero-title-size: clamp(2.5rem, 6vw + 1rem, 4rem);
    --hero-title-size-mobile: clamp(1.75rem, 7vw, 2.25rem);
    --hero-title-leading: 1.1;
    --hero-title-shadow: 0 2px 20px color-mix(in srgb, black 30%, transparent);
    --hero-subtitle-shadow: 0 1px 8px color-mix(in srgb, black 40%, transparent);
    --hero-subtitle-max: 80%;
    --hero-cta-gap: var(--space-md);
    --hero-cta-btn-gap: var(--space-xs);
    --trust-max: clamp(40rem, 80vw, 56.25rem);
    --trust-padding: var(--space-lg) var(--space-xl);
    --badge-icon-gap: var(--space-2xs);
    --badge-text-gap: calc(var(--space-2xs) / 2);
    --badge-star-spacing: calc(var(--space-2xs) / 2);
    --trust-badge-padding-mobile: var(--space-sm);
    --trust-badge-border: var(--border-width-hairline);
    --hero-light-text: white;
    --hero-light-text-soft: color-mix(in srgb, white 90%, transparent);
    --hero-light-text-subtle: color-mix(in srgb, white 95%, transparent);
    --trust-light-bg: color-mix(in srgb, var(--color-primary) 85%, transparent);
    --trust-light-border: color-mix(in srgb, white 15%, transparent);
    --trust-light-text-soft: color-mix(in srgb, white 70%, transparent);
    --trust-light-border-soft: color-mix(in srgb, white 10%, transparent);
    --outline-cta-border: color-mix(in srgb, white 80%, transparent);
    --outline-cta-hover: color-mix(in srgb, white 15%, transparent);

    position: relative;
    min-height: var(--hero-min-height);
    display: flex;
    flex-direction: column;
    justify-content: center;
    overflow: hidden;
  }

  
  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-bg :global(img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: var(--gradient-hero);
  }

  
  .hero-container {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: var(--hero-container-max);
    margin-inline: auto;
    padding-inline: var(--container-padding);
    padding-top: var(--hero-padding-top);
    padding-bottom: var(--hero-padding-bottom);
  }

  
  .hero-content {
    max-width: var(--hero-content-max);
    width: 100%;
    margin: 0 auto;
    text-align: center;
  }

  .hero-tagline {
    font-size: var(--font-size-body);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-light);
    margin-bottom: var(--space-md);
    letter-spacing: var(--tracking-wide);
  }

  .hero-title {
    font-size: var(--hero-title-size);
    font-weight: var(--font-weight-bold);
    color: var(--color-text);
    margin-bottom: var(--space-lg);
    line-height: var(--hero-title-leading);
    text-shadow: var(--hero-title-shadow);
    max-width: 100%;
    text-wrap: balance;
    letter-spacing: var(--tracking-tight);
  }

  .hero-subtitle {
    font-size: var(--font-size-h5);
    color: color-mix(in srgb, var(--color-text-inverse) 95%, transparent);
    margin-bottom: var(--space-xl);
    line-height: var(--line-height-relaxed);
    max-width: var(--hero-subtitle-max);
    margin-left: auto;
    margin-right: auto;
    text-shadow: var(--hero-subtitle-shadow);
  }

  .hero-ctas {
    display: flex;
    gap: var(--hero-cta-gap);
    flex-wrap: wrap;
    justify-content: center;
  }

  .hero-ctas .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--hero-cta-btn-gap);
  }

  
  .trust-badges-wrapper {
    position: absolute;
    bottom: var(--space-xl);
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    width: 100%;
    max-width: var(--trust-max);
    padding-inline: var(--container-padding);
  }

  .trust-badges {
    display: flex;
    justify-content: space-around;
    align-items: center;
    gap: var(--space-lg);
    padding: var(--trust-padding);
    border-radius: clamp(0.3rem, 0.6vw, 0.375rem);
  }

  .trust-badge {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  .badge-icon {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--badge-icon-gap);
    color: var(--color-accent);
  }

  .badge-icon .stars {
    font-size: var(--font-size-xs);
    color: var(--color-accent);
    letter-spacing: var(--badge-star-spacing);
  }

  .badge-text {
    display: flex;
    flex-direction: column;
    gap: var(--badge-text-gap);
  }

  .badge-label {
    font-size: var(--font-size-body);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
  }

  .badge-value {
    font-size: var(--font-size-small);
    color: var(--color-text-light);
  }

  
  @media (max-width: 768px) {
    .hero-container {
      padding-top: var(--hero-padding-top-mobile);
      padding-bottom: var(--space-xl);
    }

    .hero-content {
      text-align: center;
      max-width: 100%;
    }

    .hero-subtitle {
      max-width: 100%;
    }

    .hero-ctas {
      flex-direction: column;
      align-items: stretch;
    }

    .hero-ctas .btn {
      width: 100%;
      justify-content: center;
    }

    .trust-badges-wrapper {
      position: relative;
      bottom: auto;
      left: auto;
      transform: none;
      margin-top: var(--space-lg);
      margin-bottom: var(--space-xl);
      padding-inline: var(--space-md);
    }

    .trust-badges {
      flex-direction: column;
      gap: var(--space-sm);
      padding: var(--space-md);
    }

    .trust-badge {
      width: 100%;
      justify-content: center;
      text-align: center;
      padding: var(--trust-badge-padding-mobile);
      border-bottom: var(--trust-badge-border) solid var(--color-border-light);
      flex-direction: column;
      gap: var(--space-xs);
    }

    .trust-badge:last-child {
      border-bottom: none;
    }

    .badge-icon {
      justify-content: center;
    }

    .badge-text {
      align-items: center;
    }

    .badge-label {
      font-size: var(--font-size-small);
    }

    .badge-value {
      font-size: var(--font-size-xs);
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: var(--hero-title-size-mobile);
    }

    .hero-subtitle {
      font-size: var(--font-size-body);
    }

    .hero-tagline {
      font-size: var(--font-size-small);
    }
  }

  
  :global(html.light) .hero-tagline,
  :global(html.light) .hero-title,
  :global(html.light) .hero-subtitle {
    color: var(--hero-light-text);
  }

  :global(html.light) .hero-tagline {
    color: var(--hero-light-text-soft);
  }

  :global(html.light) .hero-subtitle {
    color: var(--hero-light-text-subtle);
  }

  
  :global(html.light) .trust-badges {
    background: var(--trust-light-bg);
    backdrop-filter: blur(var(--blur-md));
    -webkit-backdrop-filter: blur(var(--blur-md));
    border: var(--border-width-hairline) solid var(--trust-light-border);
  }

  :global(html.light) .badge-label {
    color: var(--hero-light-text);
  }

  :global(html.light) .badge-value {
    color: var(--trust-light-text-soft);
  }

  :global(html.light) .trust-badge {
    border-bottom-color: var(--trust-light-border-soft);
  }

  :global(html.light) .btn-outline-secondary {
    border-color: var(--outline-cta-border);
    color: var(--hero-light-text);
  }

  :global(html.light) .btn-outline-secondary:hover {
    background-color: var(--outline-cta-hover);
    border-color: var(--hero-light-text);
  }

  :global(html.light) .btn-outline-primary {
    border-color: var(--outline-cta-border);
    color: var(--hero-light-text);
  }

  :global(html.light) .btn-outline-primary:hover {
    background-color: var(--outline-cta-hover);
    border-color: var(--hero-light-text);
  }
</style>
