/* ================================
   BE FREE TOURS - CSS BASE
   ================================ */

/* --------------------------------
   CSS Reset (Modern)
   -------------------------------- */
*,
*::before,
*::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

html {
    -moz-text-size-adjust: none;
    -webkit-text-size-adjust: none;
    text-size-adjust: none;
    scroll-behavior: smooth;
}

body {
    min-height: 100vh;
    line-height: 1.6;
    font-family: var(--font-family);
    font-weight: 400;
    color: var(--color-text);
    background-color: var(--color-bg-white);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

img,
picture,
video,
canvas,
svg {
    display: block;
    max-width: 100%;
    height: auto;
}

input,
button,
textarea,
select {
    font: inherit;
}

button {
    cursor: pointer;
    border: none;
    background: none;
}

a {
    color: inherit;
    text-decoration: none;
}

ul,
ol {
    list-style: none;
}

h1,
h2,
h3,
h4,
h5,
h6 {
    line-height: 1.2;
    font-weight: 700;
    text-wrap: balance;
}

p {
    text-wrap: pretty;
}

/* Global hero title styling */
.hero-title {
    letter-spacing: -0.015em;
}

/* --------------------------------
   Acessibilidade - Movimento Reduzido
   -------------------------------- */
@media (prefers-reduced-motion: reduce) {

    *,
    *::before,
    *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
        scroll-behavior: auto !important;
    }
}

/* --------------------------------
   Variáveis de Cores - Tema Escuro Premium (Padrão)
   Inspirado no design noturno do Rio
   -------------------------------- */
:root {
    /* Cores primárias - Azul noturno */
    --color-primary: #0a1628;
    --color-primary-light: #1a2d4a;
    --color-primary-dark: #050d18;

    /* Cores de destaque - Laranja/Dourado sunset */
    --color-accent: #f97316;
    --color-accent-light: #fb923c;
    --color-accent-dark: #ea580c;

    /* Cores secundárias - Ciano/Teal */
    --color-secondary: #06b6d4;
    --color-secondary-light: #22d3ee;
    --color-secondary-dark: #0891b2;

    /* Fundos - Escuros com profundidade */
    --color-bg-white: #0a1628;
    --color-bg-soft: #0f1e32;
    --color-bg-dark: #050d18;
    --color-bg-card: rgba(15, 30, 50, 0.8);

    /* Texto - Claros para contraste */
    --color-text: #f8fafc;
    --color-text-light: #94a3b8;
    --color-text-muted: #64748b;
    --color-text-inverse: #0a1628;

    /* Utilitários */
    --color-border: rgba(148, 163, 184, 0.2);
    --color-border-light: rgba(148, 163, 184, 0.1);
    --color-success: #22c55e;
    --color-error: #ef4444;

    /* Glassmorphism */
    --glass-bg: rgba(15, 30, 50, 0.7);
    --glass-border: rgba(255, 255, 255, 0.1);
    --glass-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);

    /* Gradientes */
    --gradient-hero: linear-gradient(135deg, rgba(10, 22, 40, 0.9) 0%, rgba(10, 22, 40, 0.4) 50%, rgba(10, 22, 40, 0.7) 100%);
    --gradient-card: linear-gradient(180deg, rgba(15, 30, 50, 0) 0%, rgba(10, 22, 40, 0.95) 100%);
    --gradient-accent: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-light) 100%);
}

/* --------------------------------
   Variáveis de Cores - Tema Claro "Coastal Light"
   Design sofisticado inspirado em studios Webflow
   Navbar/Footer escuros como âncoras visuais
   -------------------------------- */
html.light,
:root.light {
    /* Cores primárias - Azul profundo para elementos de destaque */
    --color-primary: #0f172a;
    --color-primary-light: #1e293b;
    --color-primary-dark: #020617;

    /* Fundos - Palette cremosa com tons azulados sutis */
    --color-bg-white: #fafbfd;
    --color-bg-soft: #f1f5f9;
    --color-bg-dark: #0f172a;
    --color-bg-card: #ffffff;
    --color-bg-alt: #e8eef6;

    /* Texto - Escuros com personalidade */
    --color-text: #0f172a;
    --color-text-light: #475569;
    --color-text-muted: #64748b;
    --color-text-inverse: #f8fafc;

    /* Utilitários - Bordas e sombras azuladas */
    --color-border: rgba(15, 23, 42, 0.08);
    --color-border-light: rgba(15, 23, 42, 0.04);

    /* Glassmorphism Light - Cards com profundidade */
    --glass-bg: rgba(255, 255, 255, 0.8);
    --glass-border: rgba(15, 23, 42, 0.06);
    --glass-shadow: 0 4px 24px rgba(15, 23, 42, 0.08), 0 1px 2px rgba(15, 23, 42, 0.04);

    /* Gradientes Light */
    --gradient-hero: linear-gradient(135deg, rgba(15, 23, 42, 0.85) 0%, rgba(15, 23, 42, 0.4) 50%, rgba(15, 23, 42, 0.7) 100%);
    --gradient-card: linear-gradient(180deg, rgba(15, 23, 42, 0) 0%, rgba(15, 23, 42, 0.85) 100%);
}

