---
// @ts-nocheck
import { Image } from "astro:assets";
import BaseLayout from "../../../layouts/BaseLayout.astro";
import Breadcrumbs from "../../../components/Breadcrumbs.astro";
import {
  getArticleSchema,
  getBreadcrumbSchema,
  getFAQSchema,
  getArticleOGTags,
} from "../../../utils/seoHelpers.js";

const LANG = "es";
const siteUrl = Astro.site?.toString() || "https://befreetours.com.br";

const title = "Comida en Rio: Hub de Platos, Barrios y Tours";
const description = "Guia central de la comida carioca: platos esenciales, donde comer y tours gastronomicos.";
const category = "Comida y Bebida";
const tags = [
  "comida en rio",
  "feijoada",
  "churrasco",
  "tour gastronomico",
  "donde comer en rio",
];
const publishDate = "2025-12-18";

const blogImages = import.meta.glob<{ default: ImageMetadata }>(
  "/src/images/blog/*.{jpeg,jpg,png,webp}"
);

async function getBlogImage(imageSlug: string) {
  const possiblePaths = [
    `/src/images/blog/${imageSlug}.webp`,
    `/src/images/blog/${imageSlug}.jpg`,
    `/src/images/blog/${imageSlug}.png`,
  ];

  for (const path of possiblePaths) {
    if (blogImages[path]) {
      const img = await blogImages[path]();
      return img.default;
    }
  }
  return null;
}

const heroImage = await getBlogImage("rio-food");

const breadcrumbItems = [
  { name: "Home", url: `/${LANG}` },
  { name: "Blog", url: `/${LANG}/blog` },
  { name: "Comida en Rio", url: `/${LANG}/blog/comida-en-rio` },
];

const breadcrumbSchema = getBreadcrumbSchema(breadcrumbItems, siteUrl);

const articleSchema = getArticleSchema(
  {
    title,
    description,
    publishDate,
    updateDate: publishDate,
    category,
    tags,
    slug: "comida-en-rio",
    image: heroImage?.src,
  },
  LANG,
  siteUrl
);

const faqSchema = getFAQSchema([
  {
    question: "Â¿Cual es el plato mas tradicional de Rio?",
    answer: "La feijoada es el clasico nacional y la mejor opcion para empezar.",
  },
  {
    question: "Â¿Que barrios son mejores para comer?",
    answer: "Centro y Santa Teresa para botecos clasicos; Ipanema/Leblon para opciones premium.",
  },
  {
    question: "Â¿Vale la pena el Food Walking Tour?",
    answer: "Si, incluye 8-10 degustaciones y contexto local sin trampas para turistas.",
  },
]);

const schemas = [breadcrumbSchema, articleSchema, ...(faqSchema ? [faqSchema] : [])];
const articleOGTags = getArticleOGTags({ data: { publishDate, updateDate: publishDate, category, tags } });
---

<BaseLayout
  title={title}
  description={description}
  image={heroImage?.src}
  preloadImage={heroImage?.src}
  type="article"
  schema={schemas}
  ogTags={articleOGTags}
>
  <Breadcrumbs items={breadcrumbItems} />

  <article class="blog-post">
    <div class="container">
      <header class="post-header">
        <span class="post-category">{category}</span>
        <h1 class="post-title">{title}</h1>
        <div class="post-meta">
          <span class="author">Por Be Free Tours</span>
          <time datetime={publishDate}>18 de diciembre de 2025</time>
          <span class="read-time">9 min de lectura</span>
        </div>
      </header>

      <div class="featured-image">
        {heroImage ? (
          <Image
            src={heroImage}
            alt="Comida en Rio"
            width={1000}
            height={563}
            format="webp"
            quality={85}
            loading="eager"
            fetchpriority="high"
            decoding="async"
          />
        ) : (
          <div class="image-placeholder">ðŸ“· Image coming soon</div>
        )}
      </div>

      <div class="post-content">
        <p>
          Usa este hub para organizar tu experiencia gastronomica en Rio: platos esenciales,
          barrios y tours.
        </p>

        <h2>Empieza por la guia completa</h2>
        <p>
          Mira la lista completa de platos y donde comer:
          <a href="/es/blog/rio-food-guide-must-try-dishes">Guia gastronomica de Rio: 13 platos imperdibles</a>.
        </p>

        <h2>Mejores barrios para comer</h2>
        <ul>
          <li>Centro: botecos clasicos y lugares historicos.</li>
          <li>Santa Teresa: restaurantes con encanto y vistas.</li>
          <li>Ipanema/Leblon: gastronomia sofisticada y quioscos.</li>
        </ul>

        <h2>Tours gastronomicos</h2>
        <ul>
          <li><a href="/es/tours-privados/food-walking">Food Walking Tour en el Centro</a> - 8-10 degustaciones.</li>
          <li><a href="/es/tours-privados/little-africa">Little Africa Walking Tour</a> - historia y sabor.</li>
        </ul>

        <h2>Combina con otros destacados</h2>
        <ul>
          <li><a href="/es/blog/best-time-visit-rio-2026">Mejor epoca para visitar Rio</a></li>
          <li><a href="/es/blog/christ-redeemer-complete-guide-2026">Guia del Cristo Redentor</a></li>
        </ul>
      </div>
    </div>
  </article>
</BaseLayout>
