---
// @ts-nocheck
import { Image } from "astro:assets";
import BaseLayout from "../../../layouts/BaseLayout.astro";
import Breadcrumbs from "../../../components/Breadcrumbs.astro";
import {
  getArticleSchema,
  getBreadcrumbSchema,
  getFAQSchema,
  getArticleOGTags,
} from "../../../utils/seoHelpers.js";

const LANG = "es";
const siteUrl = Astro.site?.toString() || "https://befreetours.com.br";

const title = "Playas de Rio: Hub de Playas, Joyas Ocultas y Excursiones";
const description = "Tu hub para planear dias de playa en Rio: clasicos, playas escondidas y mejores excursiones.";
const category = "Playas";
const tags = [
  "playas de rio",
  "playas escondidas",
  "prainha",
  "grumari",
  "ilha grande",
];
const publishDate = "2025-12-03";

const blogImages = import.meta.glob<{ default: ImageMetadata }>(
  "/src/images/blog/*.{jpeg,jpg,png,webp}"
);

async function getBlogImage(imageSlug: string) {
  const possiblePaths = [
    `/src/images/blog/${imageSlug}.webp`,
    `/src/images/blog/${imageSlug}.jpg`,
    `/src/images/blog/${imageSlug}.png`,
  ];

  for (const path of possiblePaths) {
    if (blogImages[path]) {
      const img = await blogImages[path]();
      return img.default;
    }
  }
  return null;
}

const heroImage = await getBlogImage("hidden-beaches");

const breadcrumbItems = [
  { name: "Home", url: `/${LANG}` },
  { name: "Blog", url: `/${LANG}/blog` },
  { name: "Playas de Rio", url: `/${LANG}/blog/playas-de-rio` },
];

const breadcrumbSchema = getBreadcrumbSchema(breadcrumbItems, siteUrl);

const articleSchema = getArticleSchema(
  {
    title,
    description,
    publishDate,
    updateDate: publishDate,
    category,
    tags,
    slug: "playas-de-rio",
    image: heroImage?.src,
  },
  LANG,
  siteUrl
);

const faqSchema = getFAQSchema([
  {
    question: "Â¿CuÃ¡les son las mejores playas para primera vez?",
    answer: "Copacabana e Ipanema son clÃ¡sicas, pero Prainha y Grumari son mÃ¡s locales.",
  },
  {
    question: "Â¿CuÃ¡l es la mejor Ã©poca para playa?",
    answer: "De diciembre a marzo es mÃ¡s caluroso, y abril-mayo sigue siendo muy agradable.",
  },
  {
    question: "Â¿Vale la pena hacer excursiones de playa?",
    answer: "SÃ­. Ilha Grande y BÃºzios ofrecen playas increÃ­bles y otro ambiente.",
  },
]);

const schemas = [breadcrumbSchema, articleSchema, ...(faqSchema ? [faqSchema] : [])];
const articleOGTags = getArticleOGTags({ data: { publishDate, updateDate: publishDate, category, tags } });
---

<BaseLayout
  title={title}
  description={description}
  image={heroImage?.src}
  preloadImage={heroImage?.src}
  type="article"
  schema={schemas}
  ogTags={articleOGTags}
>
  <Breadcrumbs items={breadcrumbItems} />

  <article class="blog-post">
    <div class="container">
      <header class="post-header">
        <span class="post-category">{category}</span>
        <h1 class="post-title">{title}</h1>
        <div class="post-meta">
          <span class="author">Por Be Free Tours</span>
          <time datetime={publishDate}>3 de diciembre de 2025</time>
          <span class="read-time">9 min de lectura</span>
        </div>
      </header>

      <div class="featured-image">
        {heroImage ? (
          <Image
            src={heroImage}
            alt="Playas escondidas en Rio"
            width={1000}
            height={563}
            format="webp"
            quality={85}
            loading="eager"
            fetchpriority="high"
            decoding="async"
          />
        ) : (
          <div class="image-placeholder">ðŸ“· Image coming soon</div>
        )}
      </div>

      <div class="post-content">
        <p>
          Usa este hub para planear dias de playa en Rio, con clasicos, joyas ocultas y excursiones.
        </p>

        <h2>Lecturas esenciales</h2>
        <ul>
          <li><a href="/es/blog/hidden-beaches-rio-locals-love">Playas escondidas que aman los locales</a></li>
          <li><a href="/es/blog/best-time-visit-rio-2026">Mejor epoca para visitar Rio</a></li>
        </ul>

        <h2>Excursiones para amantes de playa</h2>
        <ul>
          <li><a href="/es/tours-privados/island-escape-ilha-grande">Ilha Grande Beach Paradise</a></li>
          <li><a href="/es/tours-privados/buzios-riviera">Buzios Day Trip</a></li>
        </ul>

        <h2>Tips rapidos</h2>
        <ul>
          <li>Entre semana hay menos gente.</li>
          <li>Abril-mayo y septiembre-noviembre equilibran clima y multitudes.</li>
          <li>Lleva agua, protector solar y efectivo.</li>
        </ul>

        <h2>Combina playa con comida</h2>
        <p>
          Despues del sol, mira la
          <a href="/es/blog/rio-food-guide-must-try-dishes">Guia gastronomica de Rio</a>.
        </p>
      </div>
    </div>
  </article>
</BaseLayout>
