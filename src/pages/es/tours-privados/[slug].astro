export async function getStaticPaths() {
  const paths = [];

  
  const LANG = 'es';
  const tourList = tours[LANG];

  for (const tour of tourList) {
    
    const imageSlug = tour.imageSlug || tour.slug;
    let heroImage;
    try {
      heroImage = await import(
        `../../../images/tours/heroes/${imageSlug}-hero.webp`
      );
    } catch {
      
      heroImage = await import(
        `../../../images/tours/heroes/essential-rio-hero.webp`
      );
    }

    paths.push({
      params: {
        slug: tour.slug,
      },
      props: {
        tour,
        lang: LANG,
        allTours: tourList,
        heroImage: heroImage.default, 
      },
    });
  }

  return paths;
}

