      // Fallback para essential-rio se imagem nÃ£o existir
      heroImage = await import(
        `../../../images/tours/heroes/essential-rio-hero.webp`
      );
    }

    paths.push({
      params: {
        slug: tour.slug,
      },
      props: {
        tour,
        lang: LANG,
        allTours: tourList,
        heroImage: heroImage.default, // Passar imagem como prop
      },
    });
  }

  return paths;
}

