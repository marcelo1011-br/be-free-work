---
/* ================================
   BE FREE TOURS - Privacy Policy
   Pol√≠tica de Privacidade
   ================================ */

import BaseLayout from "../../layouts/BaseLayout.astro";
import { useTranslations } from "../../i18n/utils";
import Breadcrumbs from "../../components/Breadcrumbs.astro";

const lang = "en";
const t = useTranslations(lang);

// SEO
const siteUrl = Astro.site?.toString() || "https://befreetours.com.br";
const title = "Privacy Policy | Be Free Tours";
const description = "Privacy Policy for Be Free Tours - Learn how we collect, use, and protect your personal information.";

// Breadcrumb
const breadcrumbItems = [
  { name: "Home", url: `/${lang}` },
  { name: "Privacy Policy", url: `/${lang}/privacy-policy` },
];
---

<BaseLayout title={title} description={description}>
  <!-- Breadcrumbs -->
  <Breadcrumbs items={breadcrumbItems} />

  <!-- Hero Section -->
  <section class="policy-hero">
    <div class="container">
      <h1 class="hero-title">Privacy Policy</h1>
      <p class="hero-subtitle">Last updated: January 2026</p>
    </div>
  </section>

  <!-- Content Section -->
  <section class="policy-content">
    <div class="container">
      <div class="content-wrapper">
        <article class="policy-text">
          <h2>1. Information We Collect</h2>
          <p>
            We collect information that you provide directly to us when you book a tour,
            contact us, or use our website. This may include:
          </p>
          <ul>
            <li>Name and contact information (email, phone number)</li>
            <li>Payment and billing information</li>
            <li>Travel preferences and special requirements</li>
            <li>Communication history with our team</li>
          </ul>

          <h2>2. How We Use Your Information</h2>
          <p>We use the information we collect to:</p>
          <ul>
            <li>Process and confirm your tour bookings</li>
            <li>Communicate with you about your tours</li>
            <li>Improve our services and customer experience</li>
            <li>Send you promotional materials (with your consent)</li>
            <li>Comply with legal obligations</li>
          </ul>

          <h2>3. Information Sharing</h2>
          <p>
            We do not sell your personal information. We may share your information with:
          </p>
          <ul>
            <li>Tour guides and partners necessary to provide your tour</li>
            <li>Payment processors to complete transactions</li>
            <li>Legal authorities when required by law</li>
          </ul>

          <h2>4. Data Security</h2>
          <p>
            We implement appropriate security measures to protect your personal information
            from unauthorized access, alteration, disclosure, or destruction.
          </p>

          <h2>5. Your Rights</h2>
          <p>You have the right to:</p>
          <ul>
            <li>Access your personal data</li>
            <li>Request correction of inaccurate data</li>
            <li>Request deletion of your data</li>
            <li>Opt-out of marketing communications</li>
          </ul>

          <h2>6. Cookies</h2>
          <p>
            We use cookies to improve your browsing experience. For more information,
            please see our <a href={`/${lang}/cookie-policy`}>Cookie Policy</a>.
          </p>

          <h2>7. Contact Us</h2>
          <p>
            If you have any questions about this Privacy Policy, please contact us at:
          </p>
          <p>
            Email: <a href="mailto:contact@befreetours.com.br">contact@befreetours.com.br</a><br />
            Phone: <a href="tel:+5521979271637">+55 21 97927-1637</a>
          </p>
        </article>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .policy-hero {
    --policy-hero-offset: clamp(2rem, 6vw, 2.5rem);
    padding: calc(var(--space-3xl) + var(--policy-hero-offset)) 0 var(--space-2xl);
    background: linear-gradient(
      135deg,
      var(--color-bg-dark) 0%,
      var(--color-primary) 50%,
      var(--color-bg-dark) 100%
    );
    text-align: center;
  }

  .hero-title {
    color: var(--color-text-inverse);
    margin-bottom: var(--space-sm);
  }

  .hero-subtitle {
    font-size: var(--font-size-body);
    color: color-mix(in srgb, var(--color-text-inverse) 80%, transparent);
  }

  /* Content Section */
  .policy-content {
    padding: var(--space-3xl) 0;
  }

  .content-wrapper {
    max-width: clamp(40rem, 80vw, 50rem);
    margin: 0 auto;
  }

  .policy-text {
    background: var(--glass-bg);
    border: var(--border-width-hairline) solid var(--glass-border);
    border-radius: var(--radius-lg);
    padding: var(--space-2xl);
    box-shadow: var(--glass-shadow);
  }

  .policy-text h2 {
    font-size: var(--font-size-h4);
    font-weight: var(--font-weight-bold);
    color: var(--color-text);
    margin-top: var(--space-xl);
    margin-bottom: var(--space-md);
  }

  .policy-text h2:first-child {
    margin-top: 0;
  }

  .policy-text p {
    color: var(--color-text-light);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-md);
  }

  .policy-text ul {
    color: var(--color-text-light);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
  }

  .policy-text li {
    margin-bottom: var(--space-xs);
  }

  .policy-text a {
    color: var(--color-accent);
    text-decoration: underline;
  }

  .policy-text a:hover {
    color: var(--color-primary);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .policy-hero {
      padding: calc(var(--space-2xl) + var(--policy-hero-offset)) 0 var(--space-xl);
    }

    .policy-content {
      padding: var(--space-2xl) 0;
    }

    .policy-text {
      padding: var(--space-xl);
    }
  }
</style>
