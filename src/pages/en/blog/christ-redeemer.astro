---
// @ts-nocheck
import { Image } from "astro:assets";
import BaseLayout from "../../../layouts/BaseLayout.astro";
import Breadcrumbs from "../../../components/Breadcrumbs.astro";
import {
  getArticleSchema,
  getBreadcrumbSchema,
  getFAQSchema,
  getArticleOGTags,
} from "../../../utils/seoHelpers.js";

const LANG = "en";
const siteUrl = Astro.site?.toString() || "https://befreetours.com.br";

const title = "Christ the Redeemer: The Definitive Rio Guide (2026)";
const description = "Everything you need to plan a perfect Christ the Redeemer visit: best times, tickets, transport options, photography tips, and private tours.";
const category = "Attractions";
const tags = [
  "christ the redeemer",
  "corcovado",
  "rio attractions",
  "christ tickets",
  "best time to visit",
];
const publishDate = "2025-11-10";

const blogImages = import.meta.glob<{ default: ImageMetadata }>(
  "/src/images/blog/*.{jpeg,jpg,png,webp}"
);

async function getBlogImage(imageSlug: string) {
  const possiblePaths = [
    `/src/images/blog/${imageSlug}.webp`,
    `/src/images/blog/${imageSlug}.jpg`,
    `/src/images/blog/${imageSlug}.png`,
  ];

  for (const path of possiblePaths) {
    if (blogImages[path]) {
      const img = await blogImages[path]();
      return img.default;
    }
  }
  return null;
}

const heroImage = await getBlogImage("christ-guide");

const breadcrumbItems = [
  { name: "Home", url: `/${LANG}` },
  { name: "Blog", url: `/${LANG}/blog` },
  { name: "Christ the Redeemer", url: `/${LANG}/blog/christ-redeemer` },
];

const breadcrumbSchema = getBreadcrumbSchema(breadcrumbItems, siteUrl);

const articleSchema = getArticleSchema(
  {
    title,
    description,
    publishDate,
    updateDate: publishDate,
    category,
    tags,
    slug: "christ-redeemer",
    image: heroImage?.src,
  },
  LANG,
  siteUrl
);

const faqSchema = getFAQSchema([
  {
    question: "What is the best time to visit Christ the Redeemer?",
    answer: "Early morning (7:20-8:00 AM) or late afternoon (4:00-6:00 PM) for better light and fewer crowds.",
  },
  {
    question: "Which transport option is best?",
    answer: "Train is scenic, vans are faster, and private tours are the easiest for scheduled ascent access.",
  },
  {
    question: "How long should I plan for the visit?",
    answer: "Plan 2-3 hours total including transport and time at the monument.",
  },
]);

const schemas = [breadcrumbSchema, articleSchema, ...(faqSchema ? [faqSchema] : [])];
const articleOGTags = getArticleOGTags({ data: { publishDate, updateDate: publishDate, category, tags } });
---

<BaseLayout
  title={title}
  description={description}
  image={heroImage?.src}
  preloadImage={heroImage?.src}
  type="article"
  schema={schemas}
  ogTags={articleOGTags}
>
  <Breadcrumbs items={breadcrumbItems} />

  <article class="blog-post">
    <div class="container">
      <header class="post-header">
        <span class="post-category">{category}</span>
        <h1 class="post-title">{title}</h1>
        <div class="post-meta">
          <span class="author">By Be Free Tours</span>
          <time datetime={publishDate}>November 10, 2025</time>
          <span class="read-time">10 min read</span>
        </div>
      </header>

      <div class="featured-image">
        {heroImage ? (
          <Image
            src={heroImage}
            alt="Christ the Redeemer view"
            width={1000}
            height={563}
            format="webp"
            quality={85}
            loading="eager"
            fetchpriority="high"
            decoding="async"
          />
        ) : (
          <div class="image-placeholder">ðŸ“· Image coming soon</div>
        )}
      </div>

      <div class="post-content">
        <p>
          This is the hub page for visiting Christ the Redeemer. Use it as your quick planner,
          then dive into the full guide for every detail.
        </p>

        <h2>Quick answer</h2>
        <ul>
          <li>Best time: 7:20-8:00 AM or 4:00-6:00 PM for light and fewer crowds.</li>
          <li>Best transport: train for views, van for speed, private tour for ease.</li>
          <li>Plan 2-3 hours total including transport.</li>
        </ul>

        <h2>Start with the full guide</h2>
        <p>
          For tickets, detailed comparisons, trails, and photography tips, read the complete guide:
          <a href="/en/blog/christ-redeemer-complete-guide-2026">Christ the Redeemer: Complete 2026 Visitor's Guide</a>.
        </p>

        <h2>Best tours that include Christ the Redeemer</h2>
        <ul>
          <li><a href="/en/private-tours/essential-rio">The Essential Rio</a> - full-day highlights with Christ + Sugarloaf.</li>
          <li><a href="/en/private-tours/rio-express">Rio Express 5h</a> - perfect for tight schedules.</li>
          <li><a href="/en/private-tours/first-light-sunrise">Sunrise at Sugarloaf</a> - golden hour + early access.</li>
          <li><a href="/en/private-tours/golden-hour-rio">Golden Hour Rio</a> - Christ at sunset + Sugarloaf.</li>
        </ul>

        <h2>Helpful reading</h2>
        <ul>
          <li><a href="/en/blog/best-time-visit-rio-2026">Best Time to Visit Rio (2026)</a></li>
          <li><a href="/en/blog/hidden-beaches-rio-locals-love">Hidden Beaches Locals Love</a></li>
          <li><a href="/en/blog/rio-food-guide-must-try-dishes">Rio Food Guide</a></li>
        </ul>

        <h2>FAQ</h2>
        <p>Need a faster answer? See the quick FAQ in this page's structured data.</p>
      </div>
    </div>
  </article>
</BaseLayout>
