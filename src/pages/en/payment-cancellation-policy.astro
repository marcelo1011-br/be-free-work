---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import HeroPages from "../../components/HeroPages.astro";
import { getBreadcrumbSchema } from "../../utils/seoHelpers.js";

const lang = "en";

const siteUrl = (Astro.site?.toString() || "https://befreetours.com.br").replace(/\/$/, "");
const title = "Payment & Cancellation Policy | Be Free Tours";
const description = "Payment and cancellation terms for Be Free Tours. Learn booking flow, payment deadlines, refund rules, and weather conditions.";

const breadcrumbItems = [
  { name: "Home", url: `/${lang}` },
  { name: "Payment & Cancellation Policy", url: `/${lang}/payment-cancellation-policy` },
];
const breadcrumbSchema = getBreadcrumbSchema(breadcrumbItems, siteUrl);
---

<BaseLayout title={title} description={description} schema={[breadcrumbSchema]}>
  <Breadcrumbs items={breadcrumbItems} />

  <HeroPages
    title="Payment & Cancellation Policy"
    subtitle="This page outlines our payment and cancellation terms so you can book with confidence and know exactly what to expect."
    subtitleSize="body"
    maxWidth="clamp(40rem, 80vw, 50rem)"
  />

  <section class="policy-content">
    <div class="container">
      <div class="content-wrapper">
        <article class="policy-text">
          <h2>Payment Policy</h2>

          <h3>How booking works</h3>
          <p>
            After you click Book Now and submit your booking request, our team reviews the details and confirms availability. Once confirmed, we&apos;ll send you a secure payment link by email.
          </p>

          <h3>Payment deadline</h3>
          <p>
            Full payment is required at least 72 hours (3 days) before the tour date.
          </p>

          <h3>Last-minute bookings</h3>
          <p>
            Tours booked within 72 hours of the tour date require immediate payment to secure the reservation. The payment link will be sent as soon as availability is confirmed.
          </p>

          <h3>Accepted payment methods</h3>
          <p>
            Credit and debit cards, processed securely via Stripe.
          </p>

          <h3>Unpaid bookings</h3>
          <p>
            Bookings that are not paid by the deadline are automatically released 72 hours before the tour date. Reminder notifications are sent by email and WhatsApp.
          </p>

          <h2>Cancellation &amp; Changes Policy</h2>

          <h3>Free cancellation</h3>
          <p>
            You may cancel your tour free of charge up to 72 hours (3 days) before the scheduled start time.
          </p>

          <h3>Changes or rescheduling</h3>
          <p>
            To cancel, modify, or reschedule your tour, please contact us by email or WhatsApp as soon as possible. Whenever feasible, we&apos;re happy to help adjust dates or details.
          </p>

          <h3>Late cancellations</h3>
          <p>
            Tours canceled less than 72 hours before the start date are non-refundable.
          </p>

          <h2>Weather Conditions</h2>
          <p><strong>Safety always comes first.</strong></p>
          <p>
            If severe weather conditions make the tour unsafe or impossible to operate, we will offer either:
          </p>
          <ul>
            <li>A full refund, or</li>
            <li>The option to reschedule at no additional cost</li>
          </ul>
          <p>
            Light rain or normal weather variations do not usually qualify for cancellation, as most tours can still operate safely.
          </p>

          <h2>Contact</h2>
          <p>
            If you have any questions about payments, cancellations, or changes, please contact us directly:
          </p>
          <p>
            Email: <a class="contact-link" href="mailto:info@befreetours.com.br">info@befreetours.com.br</a><br />
            WhatsApp: <a class="contact-link" href="https://wa.me/5521979271637" target="_blank" rel="noopener noreferrer">+55 21 97927-1637</a>
          </p>
          <p>We&apos;re always happy to help.</p>
        </article>
      </div>
    </div>
  </section>

  <section class="policy-page-cta">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to explore Rio your way?</h2>
        <p class="cta-subtitle">Browse our private experiences and find the ideal tour for your trip.</p>
        <div class="cta-buttons">
          <a href={`/${lang}/private-tours`} class="btn btn-primary btn-lg">
            Explore All Tours
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .policy-content {
    padding: var(--space-3xl) 0;
  }

  .content-wrapper {
    max-width: clamp(40rem, 80vw, 50rem);
    margin: 0 auto;
  }

  .policy-text {
    background: var(--glass-bg);
    border: var(--border-width-hairline) solid var(--glass-border);
    border-radius: clamp(0.3rem, 0.6vw, 0.375rem);
    padding: var(--space-2xl);
    box-shadow: var(--glass-shadow);
  }

  .policy-text h2 {
    font-size: var(--font-size-h4);
    font-weight: var(--font-weight-bold);
    color: var(--color-text);
    margin-top: var(--space-xl);
    margin-bottom: var(--space-md);
  }

  .policy-text h2:first-child {
    margin-top: 0;
  }

  .policy-text h3 {
    font-size: var(--font-size-h5);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
    margin-top: var(--space-lg);
    margin-bottom: var(--space-sm);
  }

  .policy-text p {
    color: var(--color-text-light);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-md);
  }

  .policy-text ul {
    color: var(--color-text-light);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
  }

  .policy-text li {
    margin-bottom: var(--space-xs);
  }

  .policy-text a {
    color: var(--color-accent);
    text-decoration: underline;
  }

  .policy-text a:hover {
    color: var(--color-primary);
  }

  .policy-text a.contact-link,
  .policy-text a.contact-link:hover,
  .policy-text a.contact-link:visited {
    text-decoration: none;
  }

  .policy-page-cta {
    --policy-cta-max: clamp(34rem, 70vw, 43.75rem);
    padding: var(--space-3xl) 0;
    background: linear-gradient(
      135deg,
      var(--color-bg-dark) 0%,
      var(--color-primary) 50%,
      var(--color-bg-dark) 100%
    );
    color: var(--color-text-inverse);
  }

  .cta-content {
    text-align: center;
    max-width: var(--policy-cta-max);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-lg);
  }

  .cta-title {
    color: var(--color-text-inverse);
    margin: 0;
  }

  .cta-subtitle {
    font-size: var(--font-size-h5);
    color: color-mix(in srgb, var(--color-text-inverse) 90%, transparent);
    margin: 0;
  }

  .cta-buttons {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .policy-content {
      padding: var(--space-2xl) 0;
    }

    .policy-text {
      padding: var(--space-xl);
    }

    .policy-page-cta {
      padding: var(--space-2xl) 0;
    }

    .cta-buttons {
      flex-direction: column;
      width: 100%;
      max-width: clamp(18rem, 80vw, 20rem);
    }

    .cta-buttons .btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>
