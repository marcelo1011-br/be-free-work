---


import { Image } from "astro:assets";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import HeroPages from "../../components/HeroPages.astro";
import { galleryContent } from "../../data/galleryContent.js";
import { getPageSEO, getImageGallerySchema, getBreadcrumbSchema } from "../../utils/seoHelpers.js";

const lang = "pt-br";
const content = galleryContent[lang];
const siteUrl = Astro.site?.toString() || "https://befreetours.com.br";

const galleryImageFiles = import.meta.glob<{ default: ImageMetadata }>(
  "/src/images/gallery/*.{jpeg,jpg,png,webp}",
  { eager: true }
);

const toTitleCase = (value) =>
  value
    .replace(/[-_]+/g, " ")
    .replace(/\b\w/g, (match) => match.toUpperCase());

const images = Object.entries(galleryImageFiles)
  .sort(([a], [b]) => a.localeCompare(b))
  .map(([path, module]) => {
    const imageSrc = path.split("/").pop();
    const baseName = imageSrc.replace(/\.[^/.]+$/, "");
    const title = toTitleCase(baseName);
    const description = "";
    const alt = title;

    return {
      id: baseName,
      category: "gallery",
      imageSrc,
      imageData: module.default,
      title,
      description,
      alt,
      caption: title
    };
  });


const seo = {
  title: "Galeria de Fotos - Rio de Janeiro | Be Free Tours",
  description: content.hero.subtitle,
  image: "/images/og-gallery.svg"
};


const imagesForSchema = images.map((img) => ({
  url: `/images/gallery/${img.imageSrc}`,
  thumbnail: `/images/gallery/${img.imageSrc}`,
  title: img.title,
  description: img.description || img.title,
  caption: img.caption
}));

const gallerySchema = getImageGallerySchema(imagesForSchema, lang, siteUrl);

const breadcrumbItems = [
  { name: "Home", url: `/${lang}` },
  { name: "Galeria", url: `/${lang}/galeria` }
];
const breadcrumbSchema = getBreadcrumbSchema(breadcrumbItems, siteUrl);

const schemas = [gallerySchema, breadcrumbSchema];
---

<BaseLayout title={seo.title} description={seo.description} image={seo.image} schema={schemas}>
  
  <Breadcrumbs items={breadcrumbItems} />

  
  <HeroPages
    title={content.hero.title}
    subtitle={content.hero.subtitle}
    maxWidth="clamp(34rem, 70vw, 43.75rem)"
  />

  
  <section class="gallery-grid-section">
    <div class="container">
      <div class="gallery-grid">
        {images.map((image, index) => (
          <article
            class="gallery-item"
            data-category={image.category}
            data-index={index}
          >
            <div class="gallery-item-inner">
              {image.imageData ? (
                <Image
                  src={image.imageData}
                  alt={image.alt}
                  width={600}
                  height={400}
                  loading="lazy"
                  format="webp"
                  quality={85}
                />
              ) : (
                <div class="image-placeholder">
                  <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                    <circle cx="8.5" cy="8.5" r="1.5"/>
                    <polyline points="21 15 16 10 5 21"/>
                  </svg>
                  <p>{image.imageSrc}</p>
                </div>
              )}
              <div class="gallery-overlay">
                <button class="gallery-view-btn" aria-label={`View ${image.alt}`}>
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M15 3h6v6M9 21H3v-6M21 3l-7 7M3 21l7-7"/>
                  </svg>
                </button>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  
  <div class="lightbox" id="lightbox" aria-hidden="true">
    <div class="lightbox-backdrop"></div>
    <div class="lightbox-content">
      <button class="lightbox-close" aria-label="Close lightbox">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 6L6 18M6 6l12 12"/>
        </svg>
      </button>
      <button class="lightbox-prev" aria-label="Previous image">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M15 18l-6-6 6-6"/>
        </svg>
      </button>
      <button class="lightbox-next" aria-label="Next image">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 18l6-6-6-6"/>
        </svg>
      </button>
      <div class="lightbox-image-wrapper">
        <img
          id="lightbox-image"
          src=""
          alt=""
        />
      </div>
      <div class="lightbox-counter">
        <span id="lightbox-current">1</span> / <span id="lightbox-total">{images.length}</span>
      </div>
    </div>
  </div>

  
  <section class="gallery-cta">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">{content.cta.title}</h2>
        <p class="cta-subtitle">{content.cta.subtitle}</p>
        <div class="cta-buttons">
          <a href={`/${lang}/private-tours`} class="btn btn-primary btn-lg">
            {content.cta.buttonPrimary}
          </a>
          <a href={`/${lang}/contact`} class="btn btn-outline-secondary btn-lg">
            {content.cta.buttonSecondary}
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  
  .gallery-hero {
    --gallery-hero-subtitle-max: clamp(34rem, 70vw, 43.75rem);

    padding: var(--space-3xl) 0;
    background: linear-gradient(
      135deg,
      var(--color-bg-dark) 0%,
      var(--color-primary) 50%,
      var(--color-bg-dark) 100%
    );
    color: var(--color-text-inverse);
    text-align: center;
  }

  .hero-title {
    color: var(--color-text-inverse);
    margin-bottom: var(--space-md);
  }

  .hero-subtitle {
    font-size: var(--font-size-h5);
    color: color-mix(in srgb, var(--color-text-inverse) 90%, transparent);
    max-width: var(--gallery-hero-subtitle-max);
    margin: 0 auto;
  }

  
  .gallery-grid-section {
    padding: var(--space-3xl) 0;
  }

  .gallery-grid {
    --gallery-grid-min: var(--grid-min-md);
    --gallery-item-transition: var(--transition-duration-slow) var(--transition-easing-default);

    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(min(100%, var(--gallery-grid-min)), 1fr));
    gap: var(--space-lg);
    grid-auto-flow: dense;
  }

  .gallery-item {
    opacity: 1;
    transform: scale(1);
    transition: opacity var(--gallery-item-transition), transform var(--gallery-item-transition);
  }

  .gallery-item-inner {
    --gallery-card-shadow: 0 4px 12px color-mix(in srgb, black 10%, transparent);
    --gallery-card-shadow-hover: 0 12px 24px color-mix(in srgb, black 15%, transparent);
    --gallery-card-lift: -4px;
    --gallery-image-scale: 1.05;

    position: relative;
    overflow: hidden;
    border-radius: var(--radius-lg);
    height: 100%;
    cursor: pointer;
    box-shadow: var(--gallery-card-shadow);
    transition: transform var(--gallery-item-transition), box-shadow var(--gallery-item-transition);
    aspect-ratio: 3 / 4;
  }

  .gallery-item-inner:hover {
    transform: translateY(var(--gallery-card-lift));
    box-shadow: var(--gallery-card-shadow-hover);
  }

  .gallery-item-inner img,
  .gallery-item-inner :global(img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-duration-slow) var(--transition-easing-default);
  }

  .gallery-item-inner:hover img,
  .gallery-item-inner:hover :global(img) {
    transform: scale(var(--gallery-image-scale));
  }

  .image-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-md);
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--color-accent) 10%, transparent) 0%,
      color-mix(in srgb, var(--color-secondary) 10%, transparent) 100%
    );
    color: var(--color-text-muted);
  }

  .image-placeholder svg {
    opacity: 0.5;
  }

  .image-placeholder p {
    font-size: var(--font-size-small);
    font-weight: var(--font-weight-medium);
    text-align: center;
    padding: 0 var(--space-md);
    word-break: break-word;
  }

  .gallery-overlay {
    --gallery-overlay-bg: color-mix(in srgb, black 35%, transparent);

    position: absolute;
    inset: 0;
    background: var(--gallery-overlay-bg);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity var(--gallery-item-transition);
  }

  .gallery-item-inner:hover .gallery-overlay {
    opacity: 1;
  }

  .gallery-view-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) var(--space-md);
    font-size: var(--font-size-small);
    font-weight: var(--font-weight-semibold);
    color: white;
    background-color: var(--color-accent);
    border: none;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: background-color var(--transition-duration-normal) var(--transition-easing-default);
  }

  .gallery-view-btn:hover {
    background-color: var(--color-accent-light);
  }

  
  .lightbox {
    --lightbox-z: 9999;
    --lightbox-content-z: 10000;
    --lightbox-control-z: 10001;
    --lightbox-backdrop: color-mix(in srgb, black 95%, transparent);
    --lightbox-control-bg: color-mix(in srgb, white 10%, transparent);
    --lightbox-control-bg-hover: color-mix(in srgb, white 20%, transparent);
    --lightbox-control-border: color-mix(in srgb, white 20%, transparent);
    --lightbox-control-offset: -60px;
    --lightbox-close-offset: -50px;

    position: fixed;
    inset: 0;
    z-index: var(--lightbox-z);
    display: none;
    align-items: center;
    justify-content: center;
  }

  .lightbox.active {
    display: flex;
  }

  .lightbox-backdrop {
    position: absolute;
    inset: 0;
    background-color: var(--lightbox-backdrop);
  }

  .lightbox-content {
    position: relative;
    width: 90%;
    max-width: var(--container-max);
    max-height: 90vh;
    z-index: var(--lightbox-content-z);
  }

  .lightbox-close {
    position: absolute;
    top: var(--lightbox-close-offset);
    right: 0;
    padding: var(--space-xs);
    background: transparent;
    border: none;
    color: white;
    cursor: pointer;
    transition: color var(--transition-duration-normal) var(--transition-easing-default);
    z-index: var(--lightbox-control-z);
  }

  .lightbox-close:hover {
    color: var(--color-accent);
  }

  .lightbox-prev,
  .lightbox-next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    padding: var(--space-md);
    background: var(--lightbox-control-bg);
    backdrop-filter: blur(var(--blur-sm));
    border: var(--border-width-hairline) solid var(--lightbox-control-border);
    border-radius: var(--radius-md);
    color: white;
    cursor: pointer;
    transition: background-color var(--transition-duration-normal) var(--transition-easing-default),
      border-color var(--transition-duration-normal) var(--transition-easing-default);
    z-index: var(--lightbox-control-z);
  }

  .lightbox-prev {
    left: var(--lightbox-control-offset);
  }

  .lightbox-next {
    right: var(--lightbox-control-offset);
  }

  .lightbox-prev:hover,
  .lightbox-next:hover {
    background: var(--lightbox-control-bg-hover);
    border-color: var(--color-accent);
  }

  .lightbox-image-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .lightbox-image-wrapper img {
    max-width: 100%;
    max-height: 70vh;
    object-fit: contain;
    border-radius: var(--radius-lg);
  }

  .lightbox-counter {
    position: absolute;
    bottom: calc(var(--space-lg) * -1);
    left: 50%;
    transform: translateX(-50%);
    font-size: var(--font-size-small);
    color: white;
    font-weight: var(--font-weight-medium);
  }

  
  .gallery-cta {
    --gallery-cta-max: clamp(34rem, 70vw, 43.75rem);

    padding: var(--space-3xl) 0;
    background: linear-gradient(
      135deg,
      var(--color-bg-dark) 0%,
      var(--color-primary) 50%,
      var(--color-bg-dark) 100%
    );
    color: var(--color-text-inverse);
  }

  .cta-content {
    text-align: center;
    max-width: var(--gallery-cta-max);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-lg);
    grid-auto-flow: dense;
  }

  .cta-title {
    color: var(--color-text-inverse);
    margin: 0;
  }

  .cta-subtitle {
    font-size: var(--font-size-h5);
    color: color-mix(in srgb, var(--color-text-inverse) 90%, transparent);
    margin: 0;
  }

  .cta-buttons {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
    justify-content: center;
  }

  .gallery-cta .btn-outline-secondary {
    background-color: transparent;
    border-color: var(--color-text-inverse);
    color: var(--color-text-inverse);
  }

  .gallery-cta .btn-outline-secondary:hover {
    background-color: color-mix(in srgb, var(--color-text-inverse) 10%, transparent);
    border-color: var(--color-text-inverse);
    color: var(--color-text-inverse);
  }

  
  @media (max-width: 768px) {
    .gallery-hero {
      padding: var(--space-2xl) 0 var(--space-xl);
    }

    .gallery-filters {
      padding: var(--space-xl) 0;
    }

    .filter-buttons {
      gap: var(--space-xs);
    }

    .filter-btn {
      padding: var(--space-xs) var(--space-md);
      font-size: var(--font-size-xs);
    }

    .gallery-grid {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }

    .lightbox-prev,
    .lightbox-next {
      padding: var(--space-sm-compact);
    }

    .lightbox-prev {
      left: var(--space-md);
    }

    .lightbox-next {
      right: var(--space-md);
    }

    .lightbox-close {
      top: var(--space-md);
      right: var(--space-md);
    }

    .cta-buttons {
      flex-direction: column;
      width: 100%;
      max-width: clamp(18rem, 80vw, 20rem);
    }

    .cta-buttons .btn {
      width: 100%;
    }
  }

</style>

<script>
  
  const galleryData = {
    images: Array.from(document.querySelectorAll('.gallery-item')).map(item => {
      const img = item.querySelector('img');
      return {
        src: img?.src || '',
        alt: img?.alt || ''
      };
    })
  };

  
  const lightbox = document.getElementById('lightbox');
  const lightboxImage = document.getElementById('lightbox-image');
  const lightboxCurrent = document.getElementById('lightbox-current');
  const lightboxTotal = document.getElementById('lightbox-total');
  const lightboxClose = document.querySelector('.lightbox-close');
  const lightboxPrev = document.querySelector('.lightbox-prev');
  const lightboxNext = document.querySelector('.lightbox-next');
  const lightboxBackdrop = document.querySelector('.lightbox-backdrop');
  const galleryItems = document.querySelectorAll('.gallery-item');

  let currentIndex = 0;

  function openLightbox(index) {
    currentIndex = index;
    updateLightbox();
    lightbox?.classList.add('active');
    lightbox?.setAttribute('aria-hidden', 'false');
    document.body.style.overflow = 'hidden';
  }

  function closeLightbox() {
    lightbox?.classList.remove('active');
    lightbox?.setAttribute('aria-hidden', 'true');
    document.body.style.overflow = '';
  }

  function updateLightbox() {
    const image = galleryData.images[currentIndex];
    if (lightboxImage && image) {
      lightboxImage.src = image.src;
      lightboxImage.alt = image.alt;
    }
    if (lightboxCurrent) lightboxCurrent.textContent = String(currentIndex + 1);
  }

  function nextImage() {
    currentIndex = (currentIndex + 1) % galleryData.images.length;
    updateLightbox();
  }

  function prevImage() {
    currentIndex = (currentIndex - 1 + galleryData.images.length) % galleryData.images.length;
    updateLightbox();
  }

  
  galleryItems.forEach((item, index) => {
    item.addEventListener('click', () => openLightbox(index));
  });

  lightboxClose?.addEventListener('click', closeLightbox);
  lightboxBackdrop?.addEventListener('click', closeLightbox);
  lightboxNext?.addEventListener('click', nextImage);
  lightboxPrev?.addEventListener('click', prevImage);

  
  document.addEventListener('keydown', (e) => {
    if (!lightbox?.classList.contains('active')) return;

    if (e.key === 'Escape') closeLightbox();
    if (e.key === 'ArrowRight') nextImage();
    if (e.key === 'ArrowLeft') prevImage();
  });
</script>
