---
// @ts-nocheck
import { Image } from "astro:assets";
import BaseLayout from "../../../layouts/BaseLayout.astro";
import Breadcrumbs from "../../../components/Breadcrumbs.astro";
import {
  getArticleSchema,
  getBreadcrumbSchema,
  getFAQSchema,
  getArticleOGTags,
} from "../../../utils/seoHelpers.js";

const LANG = "pt-br";
const siteUrl = Astro.site?.toString() || "https://befreetours.com.br";

const title = "Comida no Rio: Guia Central de Pratos, Bairros e Tours";
const description = "Guia central da comida carioca: pratos essenciais, onde comer e tours gastronomicos.";
const category = "Gastronomia";
const tags = [
  "comida no rio",
  "feijoada",
  "churrasco",
  "tour gastronomico",
  "onde comer no rio",
];
const publishDate = "2025-12-18";

const blogImages = import.meta.glob<{ default: ImageMetadata }>(
  "/src/images/blog/*.{jpeg,jpg,png,webp}"
);

async function getBlogImage(imageSlug: string) {
  const possiblePaths = [
    `/src/images/blog/${imageSlug}.webp`,
    `/src/images/blog/${imageSlug}.jpg`,
    `/src/images/blog/${imageSlug}.png`,
  ];

  for (const path of possiblePaths) {
    if (blogImages[path]) {
      const img = await blogImages[path]();
      return img.default;
    }
  }
  return null;
}

const heroImage = await getBlogImage("rio-food");

const breadcrumbItems = [
  { name: "Home", url: `/${LANG}` },
  { name: "Blog", url: `/${LANG}/blog` },
  { name: "Comida no Rio", url: `/${LANG}/blog/comida-no-rio` },
];

const breadcrumbSchema = getBreadcrumbSchema(breadcrumbItems, siteUrl);

const articleSchema = getArticleSchema(
  {
    title,
    description,
    publishDate,
    updateDate: publishDate,
    category,
    tags,
    slug: "comida-no-rio",
    image: heroImage?.src,
  },
  LANG,
  siteUrl
);

const faqSchema = getFAQSchema([
  {
    question: "Qual e o prato mais tradicional do Rio?",
    answer: "A feijoada e o classico nacional e a melhor pedida para comecar.",
  },
  {
    question: "Quais bairros sao melhores para comer?",
    answer: "Centro e Santa Teresa para botecos tradicionais; Ipanema/Leblon para opcoes mais sofisticadas.",
  },
  {
    question: "O Food Walking Tour vale a pena?",
    answer: "Sim, inclui 8-10 degustacoes e contexto local sem armadilhas para turistas.",
  },
]);

const schemas = [breadcrumbSchema, articleSchema, ...(faqSchema ? [faqSchema] : [])];
const articleOGTags = getArticleOGTags({ data: { publishDate, updateDate: publishDate, category, tags } });
---

<BaseLayout
  title={title}
  description={description}
  image={heroImage?.src}
  preloadImage={heroImage?.src}
  type="article"
  schema={schemas}
  ogTags={articleOGTags}
>
  <Breadcrumbs items={breadcrumbItems} />

  <article class="blog-post">
    <div class="container">
      <header class="post-header">
        <span class="post-category">{category}</span>
        <h1 class="post-title">{title}</h1>
        <div class="post-meta">
          <span class="author">Por Be Free Tours</span>
          <time datetime={publishDate}>18 de dezembro de 2025</time>
          <span class="read-time">9 min de leitura</span>
        </div>
      </header>

      <div class="featured-image">
        {heroImage ? (
          <Image
            src={heroImage}
            alt="Comida no Rio"
            width={1000}
            height={563}
            format="webp"
            quality={85}
            loading="eager"
            fetchpriority="high"
            decoding="async"
          />
        ) : (
          <div class="image-placeholder">ðŸ“· Image coming soon</div>
        )}
      </div>

      <div class="post-content">
        <p>
          Use este hub para organizar sua experiencia gastronomica no Rio: pratos essenciais,
          bairros e tours.
        </p>

        <h2>Comece pelo guia completo</h2>
        <p>
          Veja a lista completa de pratos e onde comer:
          <a href="/pt-br/blog/rio-food-guide-must-try-dishes">Guia gastronomico do Rio: 13 pratos imperdiveis</a>.
        </p>

        <h2>Melhores bairros para comer</h2>
        <ul>
          <li>Centro: botecos classicos e lugares historicos.</li>
          <li>Santa Teresa: restaurantes charmosos com vista.</li>
          <li>Ipanema/Leblon: gastronomia sofisticada e quiosques.</li>
        </ul>

        <h2>Tours gastronomicos</h2>
        <ul>
          <li><a href="/pt-br/passeios-privados/food-walking">Food Walking Tour no Centro</a> - 8-10 degustacoes.</li>
          <li><a href="/pt-br/passeios-privados/little-africa">Little Africa Walking Tour</a> - historia e sabor.</li>
        </ul>

        <h2>Combine com outros destaques</h2>
        <ul>
          <li><a href="/pt-br/blog/best-time-visit-rio-2026">Melhor epoca para visitar o Rio</a></li>
          <li><a href="/pt-br/blog/christ-redeemer-complete-guide-2026">Guia do Cristo Redentor</a></li>
        </ul>
      </div>
    </div>
  </article>
</BaseLayout>
