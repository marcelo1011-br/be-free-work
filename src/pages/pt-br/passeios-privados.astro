---
/* ================================
   BE FREE TOURS - Private Tours Hub
   Página com todos os tours + filtros
   ================================ */

import BaseLayout from "../../layouts/BaseLayout.astro";
import { tours } from "../../data/tours.js";
import { useTranslations } from "../../i18n/utils";
import TourCard from "../../components/TourCard.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import { getPageSEO, getToursCollectionSchema, getBreadcrumbSchema } from "../../utils/seoHelpers.js";

const lang = "pt-br";
const t = useTranslations(lang);

// Pega todos os tours em português
const allTours = tours[lang];

// SEO
const siteUrl = Astro.site?.toString() || "https://befreetours.com.br";
const seo = getPageSEO("privateTours", lang);

// Schemas
const collectionSchema = getToursCollectionSchema(allTours, lang, siteUrl);

// Breadcrumb
const breadcrumbItems = [
  { name: "Home", url: `/${lang}` },
  { name: "Passeios Privados", url: `/${lang}/passeios-privados` },
];
const breadcrumbSchema = getBreadcrumbSchema(breadcrumbItems, siteUrl);

const schemas = [collectionSchema, breadcrumbSchema];
---

<BaseLayout title={seo.title} description={seo.description} schema={schemas}>
  <!-- Breadcrumbs -->
  <Breadcrumbs items={breadcrumbItems} />
  <!-- Hero Section -->
  <section class="tours-hero">
    <div class="container">
      <h1 class="hero-title">{t("toursHub.title")}</h1>
      <p class="hero-subtitle">{t("toursHub.subtitle")}</p>
    </div>
  </section>

  <!-- Filters Section -->
  <section class="tours-filters">
    <div class="container">
      <div class="filters-wrapper">
        <button class="filter-btn active" data-filter="all">
          {t("toursHub.filterAll")}
          <span class="filter-count">{allTours.length}</span>
        </button>
        <button class="filter-btn" data-filter="city-tours">
          {t("toursHub.filterCity")}
          <span class="filter-count"
            >{allTours.filter((t) => t.category === "city-tours").length}</span
          >
        </button>
        <button class="filter-btn" data-filter="day-trips">
          {t("toursHub.filterDay")}
          <span class="filter-count"
            >{allTours.filter((t) => t.category === "day-trips").length}</span
          >
        </button>
        <button class="filter-btn" data-filter="walking-tours">
          {t("toursHub.filterWalking")}
          <span class="filter-count"
            >{
              allTours.filter((t) => t.category === "walking-tours").length
            }</span
          >
        </button>
      </div>
    </div>
  </section>

  <!-- Tours Grid -->
  <section class="tours-grid-section">
    <div class="container">
      <div class="tours-grid grid grid-3">
        {
          allTours.map((tour) => (
            <div class="tour-item" data-category={tour.category}>
              <TourCard tour={tour} lang={lang} />
            </div>
          ))
        }
      </div>

      <!-- No Results Message -->
      <div class="no-results" hidden>
        <p>{t("toursHub.noResults")}</p>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="tours-cta">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">{t("toursHub.ctaTitle")}</h2>
        <p class="cta-subtitle">{t("toursHub.ctaSubtitle")}</p>
        <a href={`/${lang}/contact`} class="btn btn-primary btn-lg">
          {t("toursHub.ctaButton")}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .tours-hero {
    padding: calc(var(--space-3xl) + 40px) 0 var(--space-3xl);
    background: linear-gradient(
      135deg,
      var(--color-bg-dark) 0%,
      var(--color-primary) 50%,
      var(--color-bg-dark) 100%
    );
    text-align: center;
  }

  .hero-title {
    color: white;
    margin-bottom: var(--space-md);
  }

  .hero-subtitle {
    font-size: var(--font-size-h5);
    color: color-mix(in srgb, var(--color-text-inverse) 90%, transparent);
    max-width: 800px;
    margin: 0 auto;
    line-height: var(--line-height-relaxed);
  }

  /* Filters Section */
  .tours-filters {
    padding: var(--space-xl) 0;
    background-color: var(--color-bg-soft);
    /* position: sticky; */
    top: 73px;
    z-index: 100;
    border-bottom: 1px solid var(--color-border);
  }

  .filters-wrapper {
    display: flex;
    gap: var(--space-sm);
    justify-content: center;
    flex-wrap: wrap;
    align-items: center;
  }

  .filter-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: 0.625rem 1.25rem;
    font-size: var(--font-size-small);
    font-weight: var(--font-weight-semibold);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-full);
    background-color: var(--color-bg-white);
    color: var(--color-text);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .filter-btn:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .filter-btn.active {
    background: var(--gradient-accent);
    border-color: var(--color-accent);
    color: white;
  }

  /* Fix for light theme - ensure text contrast */
  :root[data-theme="light"] .filter-btn.active {
    background: var(--color-accent);
    color: white;
  }

  .filter-count {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 24px;
    height: 24px;
    padding: 0 var(--space-xs);
    background-color: rgba(0, 0, 0, 0.15);
    border-radius: var(--radius-full);
    font-size: var(--font-size-small);
    font-weight: var(--font-weight-bold);
  }

  .filter-btn.active .filter-count {
    background-color: color-mix(in srgb, var(--color-text-inverse) 25%, transparent);
    color: white;
  }

  /* Tours Grid */
  .tours-grid-section {
    padding: calc(var(--space-3xl) + 40px) 0 var(--space-3xl);
  }

  .tours-grid {
    margin-bottom: var(--space-2xl);
  }

  .tour-item {
    transition:
      opacity 0.3s ease,
      transform 0.3s ease;
  }

  .tour-item.hidden {
    display: none;
  }

  /* No Results */
  .no-results {
    text-align: center;
    padding: calc(var(--space-3xl) + 40px) 0 var(--space-3xl);
  }

  .no-results p {
    font-size: var(--font-size-h5);
    color: var(--color-text-light);
  }

  /* CTA Section */
  .tours-cta {
    padding: calc(var(--space-3xl) + 40px) 0 var(--space-3xl);
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
  }

  .cta-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-lg);
  }

  .cta-title {
    color: white;
    margin: 0;
  }

  .cta-subtitle {
    font-size: var(--font-size-h5);
    color: color-mix(in srgb, var(--color-text-inverse) 90%, transparent);
    margin: 0;
  }

  /* Responsivo */
  @media (max-width: 768px) {
    .tours-hero {
      padding: calc(var(--space-3xl) + 60px) 0 var(--space-xl);
    }

    .hero-title {
      font-size: var(--font-size-h3);
    }

    .hero-subtitle {
      font-size: var(--font-size-body);
    }
    .tours-hero {
      padding: var(--space-2xl) 0 var(--space-xl);
    }

    .tours-filters {
      padding: var(--space-md) 0;
    }

    .filters-wrapper {
      gap: var(--space-xs);
    }

    .filter-btn {
      padding: var(--space-xs) var(--space-md);
      font-size: var(--font-size-small);
    }

    .tours-grid-section {
      padding: var(--space-2xl) 0;
    }

    .tours-cta {
      padding: var(--space-2xl) 0;
    }
  }
</style>

<script>
  /* ================================
     JAVASCRIPT - Filter Functionality
     ================================ */

  const filterButtons = document.querySelectorAll(".filter-btn");
  const tourItems = document.querySelectorAll(".tour-item");
  const noResults = document.querySelector(".no-results");

  filterButtons.forEach((button) => {
    button.addEventListener("click", () => {
      const filter = button.getAttribute("data-filter");

      // Update active button
      filterButtons.forEach((btn) => btn.classList.remove("active"));
      button.classList.add("active");

      // Filter tours
      let visibleCount = 0;

      tourItems.forEach((item) => {
        const category = item.getAttribute("data-category");

        if (filter === "all" || category === filter) {
          item.classList.remove("hidden");
          visibleCount++;
        } else {
          item.classList.add("hidden");
        }
      });

      // Show/hide no results message
      if (visibleCount === 0) {
        noResults?.removeAttribute("hidden");
      } else {
        noResults?.setAttribute("hidden", "");
      }
    });
  });
</script>
